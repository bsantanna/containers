{
  "kind": "Job",
  "apiVersion": "batch/v1",
  "metadata": {
    "name": "manifest-publisher-job"
  },
  "spec": {
    "parallelism": 1,
    "completions": 1,
    "template": {
      "metadata": {
        "name": "manifest-publisher-job"
      },
      "spec": {
        "containers": [
          {
            "name": "manifest-publisher-container",
            "image": "bsantanna/docker-manifest-publisher",
            "command": [
              "/opt/workspace/manifest-publisher-job.sh"
            ],
            "env": [
              {
                "name": "DOCKER_REGISTRY_USERNAME",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "dockerhub-kv",
                    "key": "username"
                  }
                }
              },
              {
                "name": "DOCKER_REGISTRY_PASSWORD",
                "valueFrom": {
                  "secretKeyRef": {
                    "name": "dockerhub-kv",
                    "key": "password"
                  }
                }
              }
            ],
            "volumeMounts": [
              {
                "mountPath": "/opt/workspace/",
                "name": "docker-images-volume"
              }
            ]
          }
        ],
        "volumes": [
          {
            "name": "docker-images-volume",
            "persistentVolumeClaim": {
              "claimName": "docker-images-volume-claim"
            }
          }
        ],
        "restartPolicy": "Never"
      }
    }
  }
}
